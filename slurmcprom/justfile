build_dir := "./build"
set dotenv-path := "../.env"
set dotenv-load
set shell := ["bash", "-ceo", "pipefail"]

default:
  just --list

gotest:
  #!/bin/bash
  set -aeuxo pipefail
  CGO_CXXFLAGS="-I${SLURM_INCLUDE_DIR}"
  CGO_LDFLAGS="-L${SLURM_LIB_DIR} -lslurmfull"
  LD_LIBRARY_PATH="$SLURM_LIB_DIR"
  go test
